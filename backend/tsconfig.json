{
  "compilerOptions": {
    "target": "ES2020",                   // Modern ECMAScript target for Node.js
    "module": "commonjs",                  // Use CommonJS modules (required for Node.js)
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,               // Ensure compatibility between CommonJS and ES modules
    "moduleResolution": "node",            // Resolve modules using Node.js resolution algorithm
    "resolveJsonModule": true,             // Allow importing .json files
    "outDir": "./dist",                    // Output directory for compiled JS files
    "rootDir": "./src",                    // Root directory for source files
    "skipLibCheck": true                   // Skip type checking of all declaration files
  },
  "include": ["src/**/*.ts"],               // Include all .ts files in src folder
  "exclude": ["node_modules"]               // Exclude node_modules to prevent unnecessary transpilation
}
